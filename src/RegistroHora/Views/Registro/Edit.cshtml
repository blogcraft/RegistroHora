@model RegistroHora.Models.Registro

@{
    ViewData["Title"] = "Edit";
}

<h2>Edit</h2>

<form asp-action="Edit">
    <div class="form-horizontal">
        <h4>Registro</h4>
        <hr />
        <div asp-validation-summary="ValidationSummary.ModelOnly" class="text-danger"></div>
        <input type="hidden" asp-for="Id" />
        <div class="form-group">
            <label asp-for="Fecha" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="Fecha" class="form-control" />
                <span asp-validation-for="Fecha" class="text-danger" />
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Horas" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="Horas" class="form-control" />
                <span asp-validation-for="Horas" class="text-danger" />
            </div>
        </div>
        <div class="form-group">
            <label asp-for="ProyectoId" class="control-label col-md-2">ProyectoId</label>
            <div class="col-md-10">
                <select asp-for="ProyectoId" asp-items="ViewBag.ProyectoId" class="form-control"></select>
                <span asp-validation-for="ProyectoId" class="text-danger" />
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Usuario" class="control-label col-md-2">UsuarioId</label>
            <div class="col-md-10">
                <input asp-for="Usuario" class="form-control" readonly />
                <span asp-validation-for="Usuario" class="text-danger" />
            </div>
        </div>
        <input type="hidden" asp-for="UsuarioId" />
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>
</form>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}
